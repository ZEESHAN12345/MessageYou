<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.zeeshan.customdialerpad.MainActivity"
    android:weightSum="10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:layout_weight="8.9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:id="@+id/chatbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/person1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person 1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/message_person1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message by Person1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="left"
                android:background="@drawable/rectangle_person1"/>
            <TextView
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textSize="18sp"
                android:layout_gravity="right"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/message_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message by You"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:background="@drawable/rectangle_you"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/typeColor"
        android:weightSum="20"
        android:layout_weight="1.1">
        <EditText
            android:id="@+id/typebox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="19" />
        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/sendButtonColor"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
